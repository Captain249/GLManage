<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gl.common.user.dao.UserMapper">
    <select id="loginCheck" parameterType="User" resultType="User">
        select * from user where username=#{username} and password=#{password};
    </select>
    <insert id="insertBatch" parameterType="java.util.List">
        insert into user(id,username,password,role,phonenumber,address) values
        <foreach collection="users" item="user" index="index" separator=",">
            (null,#{user.username},#{user.password},#{user.role},#{user.phonenumber},#{user.address})
        </foreach>
    </insert>

    <insert id="createDynamicTable" parameterType="java.lang.Integer">
        CREATE TABLE Temporary_${id} (
            id  INT  AUTO_INCREMENT  UNIQUE,
            name  VARCHAR(255),  PRIMARY KEY (id)
        );
    </insert>
    <select id="test" resultType="com.gl.common.user.bean.User">
        select * from user where username = #{user.username} and id = #{id}
    </select>
</mapper>